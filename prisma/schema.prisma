generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ELanguage {
  EN_US
  PT_BR

  @@map("languages")
}

model User {
  id String @id @default(uuid()) @map("id") @db.Uuid

  createdAt  DateTime
  updatedAt  DateTime
  disabledAt DateTime?
  deletedAt  DateTime?

  firstName    String
  lastName     String
  email        String    @unique
  phone        String    @unique
  passwordHash String
  description  String?
  imageUri     String?
  darkMode     Boolean
  language     ELanguage

  Sessions Session[]

  @@map("users")
}

model Session {
  id String @id @default(uuid()) @map("id") @db.Uuid

  connectedAt    DateTime
  disconnectedAt DateTime?
  expiresAt      DateTime
  tokens         String[]

  User   User   @relation(fields: [userId], references: [id])
  userId String @db.Uuid

  @@map("sessions")
}
